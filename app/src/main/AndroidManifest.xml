<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.smarttrainreservation">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/trainnnn"
        android:label="@string/app_name"
        android:roundIcon="@drawable/trainnnn"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".SignupActivity" />
        <activity android:name=".EnterTrainInformation" />
        <activity android:name=".seatBookingrecyclerView.MainActivitySeatsManually"/>
        <activity android:name=".TicketPricesActivity" />
        <activity android:name=".AvailableSeatsActivity"></activity>
        <activity android:name=".seatBookingrecyclerView.MainActivitySeats"/>
    </application>

</manifest>